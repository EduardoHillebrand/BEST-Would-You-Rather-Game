<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BEST_WYR"
             x:Class="BEST_WYR.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="Start"
                         VerticalOptions="FillAndExpand">
                
                <Button x:Name="sBut"
                    Text="Start!"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="#ccffff"
                    Clicked="Begin"
                        />
            </StackLayout>
            
            <StackLayout x:Name="Game"
                         VerticalOptions="FillAndExpand">
            <Label Text="Would You Rather:"
                   HorizontalOptions="Center"/>
            <Button x:Name="A"
                    Text="A"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="#F1948A"
                    Clicked="Next"
                    />
            <Label Text="OR"
                    HorizontalOptions="Center"/>
            <Button x:Name="B"
                    Text="B"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="#AED6F1"
                    Clicked="Next"
                    />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>